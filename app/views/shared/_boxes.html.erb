<%= stylesheet_link_tag 'boxes' %>
<div id="gallery">
	<h1>Our Recommendations:</h1>
	<p>Pro Tip: Places with <%= image_tag "sun-icon", class: "box-icon inline-icon" %> have outdoor seating.</p>
	<div class="wrapper">
		<div class="cols">
			 <% @places.each do |p| %>
					<div class="col" ontouchstart="this.classList.toggle('hover');">
						<div class="container">
						<a href="places/<%= p.id %>"><div class="front" style="background-image: url(<%= asset_path (p.image_url) %>)">
								<div class="inner">
									<h1><%= p.name %></h1>
		              <h2><%= p.category %><h2>
									<!-- conditionally show icon if venue is fit for sunny days -->
									<% if p.weather_category == "outdoor access" || p.weather_category == "outdoors only" %>
										<%= image_tag "sun-icon", class: "box-icon" %>
									<% end %>
								</div>
						</div>

						<div class="back">
							<div class="inner">
								<p><%= p.street_address %></p>
								<p><%= p.cross_street %></p>
								<p><%= p.city %>, <%= p.state %> <%= p.zip_code %></p>
							</div>
						</div>
						</a>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>
